<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.amitthakur.roulette.ui.SpinViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1. Top App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Roulette Predictor"
                app:titleTextColor="@android:color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- 2. Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?attr/dividerVertical"
                android:dividerPadding="16dp"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp">

                <!-- A) Spin Details -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.Card.View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spin Details"
                            style="?attr/textAppearanceHeadline6"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dealer ID"
                            android:layout_marginTop="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Spinner
                                android:id="@+id/spinnerDirection"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:entries="@array/directions"
                                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp"/>

                            <Spinner
                                android:id="@+id/spinnerSpeed"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:entries="@array/speeds"
                                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="Friction">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/frictionInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="Vibration">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vibrationInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnStart"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Start Spin"/>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSettle"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Ball Settled"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTilt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tilt: 0°"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- B) Table & Environment -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.MaterialComponents.Card.View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Environment"
                            style="?attr/textAppearanceHeadline6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <Spinner
                                android:id="@+id/spinnerTableId"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:entries="@array/table_ids"
                                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp"/>

                            <Spinner
                                android:id="@+id/spinnerBallMaterial"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:entries="@array/ball_materials"
                                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                            <Spinner
                                android:id="@+id/spinnerSpinTech"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:entries="@array/spin_techniques"
                                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"/>

                            <View
                                android:layout_width="16dp"
                                android:layout_height="0dp"/>

                            <SeekBar
                                android:id="@+id/seekReleaseAngle"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:max="360"/>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ambient Temp (°C)"
                            android:layout_marginTop="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tempInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Humidity (%)"
                            android:layout_marginTop="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/humidityInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dealer Height (cm)"
                            android:layout_marginTop="8dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dealerHeightInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- C) Submit & Predict -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitBtn"
                    style="?attr/materialButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit and Predict"/>

                <!-- D) Recent Spins -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Spins"
                    style="?attr/textAppearanceHeadline6"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/spinList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>